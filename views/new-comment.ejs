<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <form class="new-comment-form" action="/comments" method="POST">
        <label for="sneaker_id">Sneaker:</label>
        <select name="sneaker_id" required>
            <% sneakers.forEach(sneaker => { %>
                <option value="<%= sneaker.id %>"><%= sneaker.name %></option>
            <% }) %>
        </select>
        <label for="user">User:</label>
        <input type="text" name="user" required>
        <label for="img">Image URL:</label>
        <input type="text" name="img">
        <label for="content">Content:</label>
        <textarea name="content" required></textarea>
        <label for="stars">Stars (1-5):</label>
        <input type="number" name="stars" min="1" max="5" required>
        <button type="submit">Submit Comment</button>
    </form>
</body>
</html>
